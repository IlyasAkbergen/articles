# Development Environment Variables
# Copy this file to .env for local development

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=articles
DATABASE_USER=articles_user
DATABASE_PASSWORD=articles_password
DATABASE_URL=postgresql://articles_user:articles_password@postgres:5432/articles

# Database Configuration for External Access (from host machine)
# Use these if connecting from outside Docker containers
DATABASE_HOST_EXTERNAL=localhost
DATABASE_PORT_EXTERNAL=5440

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Redis Configuration for External Access (from host machine)
# Use these if connecting from outside Docker containers
REDIS_HOST_EXTERNAL=localhost
REDIS_PORT_EXTERNAL=6399

# Application Configuration
PORT=3000
NODE_ENV=development

# Security (change these in production!)
JWT_SECRET=secret
API_KEY=api-key
